#import <UIKit/UIKit.h>

@interface BWXSwitch : UIControl
/*描述:开关是否打开*/
@property(nonatomic,getter=isOn) BOOL on;//kvo or UIControlEventValueChanged
- (id)initWithFrame:(CGRect)frame;//size = 77x30 always
/*
 * 描述:设置开关是否打开
 * @param   on          是否打开
 * @param   animated    是否显示动画
 */
- (void)setOn:(BOOL)on animated:(BOOL)animated;//not notify
@end
